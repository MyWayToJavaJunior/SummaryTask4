		mail.smtp.starttls.enable="true" mail.smtp.port="587"
		mail.smtp.user="mail.university.admission@gmail.com" mail.smtp.auth="true"
		password="univer1234" mail.smtp.ssl.trust="smtp.gmail.com" />

</Context>
